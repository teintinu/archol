  "author": "thr0w <josefernandotolentino@gmail.com>",
  "license": "MIT",
  "scripts": {
    "generate-hw": "tsc -p . && node .temp/dist/builder/index",
    "generate-app-schema": "npx typescript-to-json-schema --path builder/typesDecl.ts --type Application > schemas/app.json",
    "generate-pkg-schema": "npx typescript-to-json-schema --path builder/typesDecl.ts --type Package > schemas/pkg.json",
    "generate-schemas": "npm run generate-pkg-schema && npm run generate-app-schema"
  },
  "dependencies": {
    "@hoda5/extensions": "^1.3.14",
    "chokidar": "^3.4.0",
    "mkdirp": "^1.0.4",
    "ts-morph": "^7.1.2",
    "ts-node": "^8.10.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^14.0.14",
    "typescript-to-json-schema": "^0.6.0"
  }
}
