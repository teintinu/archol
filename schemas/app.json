{
  "$ref": "#/definitions/Application",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "definitions": {
    "Application": {
      "additionalProperties": false,
      "properties": {
        "builders": {
          "additionalProperties": {
            "$ref": "#/definitions/BuilderConfig"
          },
          "type": "object"
        },
        "description": {
          "$ref": "#/definitions/I18N"
        },
        "icon": {
          "$ref": "#/definitions/Icon"
        },
        "lang": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "rules": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "uses": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "required": [
        "name",
        "description",
        "icon",
        "uses",
        "lang",
        "rules",
        "builders"
      ],
      "type": "object"
    },
    "BuilderConfig": {
      "additionalProperties": false,
      "properties": {
        "rootDir": {
          "type": "string"
        }
      },
      "required": [
        "rootDir"
      ],
      "type": "object"
    },
    "I18N": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "additionalProperties": false,
          "properties": {
            "en": {
              "type": "string"
            },
            "pt": {
              "type": "string"
            }
          },
          "required": [
            "pt",
            "en"
          ],
          "type": "object"
        }
      ]
    },
    "Icon": {
      "type": "string"
    }
  }
}